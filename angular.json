{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
      "lib": {
        "root": ".",
        "sourceRoot": "src",
        "projectType": "library",
        "prefix": "blui",
        "architect": {
          "build": {
            "builder": "@angular-devkit/build-angular:ng-packagr",
            "options": {
              "tsConfig": "config/tsconfig.lib.json",
              "project": "ng-package.json"
            },
            "configurations": {
              "production": {
                "tsConfig": "config/tsconfig.lib.json"
              }
            }
          },
          "test": {
            "builder": "@angular-devkit/build-angular:karma",
            "options": {
              "main": "src/test.ts",
              "tsConfig": "config/tsconfig.spec.json",
              "karmaConfig": "karma.conf.js"
            }
          }
        }
      },
      "demo": {
        "projectType": "application",
        "schematics": {
          "@schematics/angular:component": {
            "style": "scss"
          },
          "@schematics/angular:application": {
            "strict": true
          }
        },
        "root": "",
        "sourceRoot": "src",
        "prefix": "app",
        "architect": {
          "build": {
            "builder": "@angular-devkit/build-angular:browser",
            "options": {
              "outputPath": "build",
              "index": "src/index.html",
              "main": "src/main.ts",
              "polyfills": [ "zone.js" ],
              "tsConfig": "config/tsconfig.app.json",
              "inlineStyleLanguage": "scss",
              "assets": [
                "src/favicon.ico",
                "src/assets",
                {
                  "glob": "**/*",
                  "input": "src/docs/md",
                  "output": "src/assets/md"
                },
                {
                  "glob": "icons.svg",
                  "input": "./node_modules/@brightlayer-ui/icons-svg",
                  "output": "./assets/blui-icons"
                }
              ],
              "styles": [
                "src/styles.scss",
                "./node_modules/@brightlayer-ui/icons/BrightlayerUIIcons.css",
                "node_modules/prismjs/themes/prism-tomorrow.css",
                "node_modules/prismjs/plugins/line-highlight/prism-line-highlight.css",
                "node_modules/prismjs/plugins/line-numbers/prism-line-numbers.css",
                "./node_modules/@brightlayer-ui/angular-themes/theme.scss",
                "./node_modules/@brightlayer-ui/angular-themes/open-sans.scss"
              ],
              "scripts": [
                "node_modules/marked/marked.min.js",
                "node_modules/prismjs/prism.js",
                "node_modules/prismjs/components/prism-typescript.js",
                "node_modules/prismjs/plugins/line-highlight/prism-line-highlight.js",
                "node_modules/prismjs/plugins/line-numbers/prism-line-numbers.js"
              ]
            },
            "configurations": {
              "production": {
                "tsConfig": "config/tsconfig.app.json",
                "budgets": [
                  {
                    "type": "initial",
                    "maximumWarning": "500kb",
                    "maximumError": "2mb"
                  },
                  {
                    "type": "anyComponentStyle",
                    "maximumWarning": "10kb",
                    "maximumError": "20kb"
                  }
                ],
                "fileReplacements": [
                  {
                    "replace": "src/environments/environment.ts",
                    "with": "src/environments/environment.prod.ts"
                  }
                ],
                "outputHashing": "all"
              },
              "development": {
                "tsConfig": "config/tsconfig.app.json",
                "budgets": [
                  {
                    "type": "initial",
                    "maximumWarning": "500kb",
                    "maximumError": "2mb"
                  },
                  {
                    "type": "anyComponentStyle",
                    "maximumWarning": "10kb",
                    "maximumError": "20kb"
                  }
                ],
                "fileReplacements": [
                  {
                    "replace": "src/environments/environment.ts",
                    "with": "src/environments/environment.dev.ts"
                  }
                ],
                "outputHashing": "all"
              },
              "local": {
                "tsConfig": "config/tsconfig.app.json",
                "buildOptimizer": false,
                "optimization": false,
                "vendorChunk": true,
                "extractLicenses": false,
                "sourceMap": true,
                "namedChunks": true
              },
              "npm": {
                "tsConfig": "config/tsconfig.npm.json",
                "buildOptimizer": false,
                "optimization": false,
                "vendorChunk": true,
                "extractLicenses": false,
                "sourceMap": true,
                "namedChunks": true
              }
            },
            "defaultConfiguration": "production"
          },
          "serve": {
            "builder": "@angular-devkit/build-angular:dev-server",
            "configurations": {
              "local": {
                "browserTarget": "demo:build:local"
              },
              "npm": {
                "browserTarget": "demo:build:npm"
              }
            },
            "defaultConfiguration": "local"
          },
          "extract-i18n": {
            "builder": "@angular-devkit/build-angular:extract-i18n",
            "options": {
              "browserTarget": "demo:build"
            }
          },
          "test": {
            "builder": "@angular-devkit/build-angular:karma",
            "options": {
              "polyfills": [ "zone.js", "zone.js/testing" ],
              "tsConfig": "config/tsconfig.spec.json",
              "karmaConfig": "karma.conf.js",
              "inlineStyleLanguage": "scss",
              "assets": [
                "src/favicon.ico",
                "src/assets"
              ],
              "styles": [
                "src/styles.scss",
                "./node_modules/@brightlayer-ui/angular-themes/theme.scss",
                "./node_modules/@brightlayer-ui/angular-themes/open-sans.scss"
              ],
              "scripts": [
              ]
            }
          }
        }
      },
      "defaultProject": "demo"
    }
}
